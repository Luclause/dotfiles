# -------------------------------------------------------------------
# CUSTOMIZATION
# -------------------------------------------------------------------

# -------------------------------------------------------------------
# bat
# -------------------------------------------------------------------

# Copy contents to clipboard
batclip() {
    bat -P --plain "$1" | xclip -selection clipboard
}

# -------------------------------------------------------------------
# zoxide
# -------------------------------------------------------------------

eval "$(zoxide init zsh)"

# -------------------------------------------------------------------
# atuin
# -------------------------------------------------------------------

. "$HOME/.atuin/bin/env"
eval "$(atuin init zsh)"

# -------------------------------------------------------------------
# uv
# -------------------------------------------------------------------

. "$HOME/.local/bin/env"
# eval "$(uv init zsh)" # INFO: already initialized by install

# uv autocompletion
# autoload -Uz compinit && compinit # INFO: if needed when error
eval "$(uv generate-shell-completion zsh)"

