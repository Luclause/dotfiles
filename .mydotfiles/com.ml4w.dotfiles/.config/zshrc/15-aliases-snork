# -----------------------------------------------------
# ALIASES
# -----------------------------------------------------

# -----------------------------------------------------
# Snork
# -----------------------------------------------------

# zoxide
alias cd="z"

# bat
alias cat="bat --color=always --line-range :500"

# zsh
alias zshconfig="nvim ~/.mydotfiles/com.ml4w.dotfiles/.config/zshrc"
alias reload="source ~/.mydotfiles/com.ml4w.dotfiles/.zshrc"

# kitty
[ "$TERM" = "xterm-kitty" ] && alias ssh="kitty +kitten ssh"

# Python 
alias pyactivate="source .venv/bin/activate"

# lazydocker
alias lzdocker="lazydocker"

